apiVersion: "logging.openshift.io/v1"
kind: "ClusterLogging"
metadata:
  name: "instance"
  namespace: openshift-logging
spec:
  managementState: "Managed"
  logStore:
    type: "elasticsearch"
    elasticsearch:
      nodeCount: 3
      {% if efk_elasticsearch.resources is defined %}resources: {{ efk_elasticsearch.resources  }}{% endif %}{{''}}
      storage:
        storageClassName: {{ efk_es_pv_storage_class }}
        size: {{ efk_es_pv_size }}
      redundancyPolicy: "SingleRedundancy"
  visualization:
    type: "kibana"
    kibana:
      replicas: 2
      {% if efk_kibana.resources is defined %}resources: {{ efk_kibana.resources  }}{% endif %}{{''}}
  curation:
    type: "curator"
    curator:
      nodeSelector:
        beta.kubernetes.io/os: linux
      {% if efk_curator.resources is defined %}resources: {{ efk_curator.resources  }}{% endif %}{{''}}
      schedule: "*/10 * * * *"
  collection:
    logs:
      type: "fluentd"
      fluentd:
        {% if efk_fluentd.resources is defined %}resources: {{ efk_fluentd.resources  }}{% endif %}{{''}}
